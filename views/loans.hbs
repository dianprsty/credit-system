<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Loan Document</title>
    <link rel="stylesheet" href="{{baseUrl}}/static/stylesheets/loans.css" />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>PT JKL</h1>
        <p>Alamat : Jl Merdeka Selatan Jakarta Pusat</p>
      </div>
      <div class="po">
        <p>No. PO : {{id}}</p>
      </div>
      <h1>Purchare Order</h1>
      <table>
        <thead>
          <tr class="heading">
            <th class="a-left" colspan="2">Data Pelanggan</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="a-left f-bold">Nama Lengkap</td>
            <td class="last">{{customer.name}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">NIK</td>
            <td class="last">{{customer.nik}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Tanggal Lahir</td>
            <td class="last">{{customer.birthDate}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Status Pernikahan</td>
            <td class="last">{{customer.maritalStatus}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Nama Pasangan</td>
            <td class="last">{{customer.partnerName}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">NIK Pasangan</td>
            <td class="last">{{customer.partnerNik}}</td>
          </tr>
        </tbody>
      </table>
      <table>
        <thead>
          <tr class="heading">
            <th class="a-left" colspan="2">Data Kendaraan</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="a-left f-bold">Dealer</td>
            <td class="last">{{vehicle.dealer}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Merek</td>
            <td class="last">{{vehicle.brand}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Model</td>
            <td class="last">{{vehicle.model}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Tipe</td>
            <td class="last">{{vehicle.type}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Warna</td>
            <td class="last">{{vehicle.color}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Harga</td>
            <td class="last">Rp {{vehicle.price}}</td>
          </tr>
        </tbody>
      </table>
      <table>
        <thead>
          <tr class="heading">
            <th class="a-left" colspan="3">Data Angsuran</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="a-left f-bold">Asuransi</td>
            <td>{{insurance}}% x {{vehicle.price}}</td>
            <td class="last">Rp {{totalInsurance}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Uang Muka (DP)</td>
            <td></td>
            <td class="last">Rp {{downPayment}}</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Tenor</td>
            <td></td>
            <td class="last">{{duration}} Bulan</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Bunga</td>
            <td></td>
            <td class="last">{{interest}}% / Tahun</td>
          </tr>
          <tr>
            <td class="a-left f-bold">Angsuran per Bulan</td>
            <td></td>
            <td class="last">Rp {{installments}}</td>
          </tr>

          <tr>
            <td class="a-left f-bold">Marketing</td>
            <td></td>
            <td class="last">{{user.name}}</td>
          </tr>
        </tbody>
      </table>
      <div class="p-end">
        <p>Jakarta, 12-02-2024</p>

        <p>Dian Prasetyo</p>
      </div>

    </div>
    <footer>Tanggal Cetak : {{date}}</footer>
  </body>
</html>